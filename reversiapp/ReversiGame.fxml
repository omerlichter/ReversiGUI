<?xml version = "1.0" encoding = "UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="reversiapp.ReversiGameController" fx:id="root" spacing="10">
    <VBox spacing="10">
        <HBox spacing="5">
            <Text text="Current player:"></Text>
            <Text fx:id="currentPlayer" text=""></Text>
        </HBox>

        <HBox spacing="5">
            <Text text="Black player score:"></Text>
            <Text fx:id="blackPlayerScore" text=""></Text>
        </HBox>

        <HBox spacing="5">
            <Text text="White player score:"></Text>
            <Text fx:id="whitePlayerScore" text=""></Text>
        </HBox>
    </VBox>
</HBox>
