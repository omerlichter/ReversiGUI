<?xml version = "1.0" encoding = "UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="reversiapp.MenuController" alignment="center"
          hgap="10" vgap="10">
    <padding><Insets top="25" right="25" bottom="10"
                     left="25"></Insets></padding>

    <Text text="Reversi Menu"
          GridPane.rowIndex="0" GridPane.columnIndex="0"
          GridPane.columnSpan="2"/>

    <VBox spacing="10"
          GridPane.rowIndex="1" GridPane.columnIndex="0">
        <Button fx:id="startButton" text="Start" onAction="#start"/>
        <Button fx:id="settingsButton" text="Settings" onAction="#settings"/>
    </VBox>
</GridPane>